    <t t-extend="website.slides.fullscreen.content">
        <t t-jquery="t[t-if*='_.contains(['document', 'presentation'], widget.get('slide').type)']" t-operation="replace">
            <t t-if="_.contains(['assignment','document', 'presentation'], widget.get('slide').type)">
            <div class="embed-responsive h-100">
                <iframe t-att-src="widget.get('slide').embedUrl" class="o_wslides_iframe_viewer" allowFullScreen="false" frameborder="0"/>
            </div>
        </t>
        </t>
    </t>
</templates>
